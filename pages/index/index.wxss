.nav {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 999;
}

.recommend {
    margin-top: 110rpx;
    display: block;
}

.add {
    margin-right: 20rpx;
}

.to-catalog {
    display: inline-block;
    border: 1px solid #000;
    padding: 10rpx 20rpx;
    font-size: 28rpx;
}

.loading-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #fff;
}

.loading {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%)
}